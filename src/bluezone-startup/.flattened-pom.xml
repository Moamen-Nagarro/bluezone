<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.github.jmgarridopaz.bluezone</groupId>
    <artifactId>bluezone-parent</artifactId>
    <version>1.0.0</version>
    <relativePath>../bluezone-parent</relativePath>
  </parent>
  <groupId>io.github.jmgarridopaz.bluezone</groupId>
  <artifactId>bluezone-startup</artifactId>
  <version>1.0.0</version>
  <name>BlueZone Startup</name>
  <properties>
    <mavenDependencyPlugin.version>3.1.1</mavenDependencyPlugin.version>
    <bluezone.mp>${project.build.directory}/bzmodulepath</bluezone.mp>
  </properties>
  <dependencies>
    <dependency>
      <groupId>io.github.jmgarridopaz.bluezone</groupId>
      <artifactId>bluezone-hexagon</artifactId>
    </dependency>
    <dependency>
      <groupId>io.github.jmgarridopaz.bluezone</groupId>
      <artifactId>bluezone-adapter-forparkingcars-test</artifactId>
    </dependency>
    <dependency>
      <groupId>io.github.jmgarridopaz.bluezone</groupId>
      <artifactId>bluezone-adapter-forcheckingcars-test</artifactId>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>src/main/bluezone.startup</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>${mavenDependencyPlugin.version}</version>
        <executions>
          <execution>
            <id>copy-to-modulepath</id>
            <phase>verify</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${bluezone.mp}</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
              <excludeTransitive>false</excludeTransitive>
            </configuration>
          </execution>
          <execution>
            <id>copy-startup-to-modulepath</id>
            <phase>verify</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <outputDirectory>${bluezone.mp}</outputDirectory>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>${project.artifactId}</artifactId>
                  <version>${project.version}</version>
                  <type>jar</type>
                  <overWrite>true</overWrite>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
